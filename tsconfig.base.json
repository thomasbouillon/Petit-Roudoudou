{
  "compileOnSave": false,
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "prisma/@types"],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@couture-next/api-connector": ["libs/api-connector/src/index.ts"],
      "@couture-next/billing": ["libs/billing/src/index.ts"],
      "@couture-next/cms": ["libs/cms/src/index.ts"],
      "@couture-next/routing": ["libs/routing/src/index.ts"],
      "@couture-next/seo": ["libs/seo/src/index.ts"],
      "@couture-next/shipping": ["libs/shipping/src/index.ts"],
      "@couture-next/types": ["libs/types/src/index.ts"],
      "@couture-next/ui/*": ["apps/storefront/app/(components)/*"],
      "@couture-next/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
